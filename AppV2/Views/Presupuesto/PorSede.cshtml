@using Entidades;
@model Sede

<div class="row">
    <br />
    <div class="col-sm-6 panel-principal">
        <h3>Presupuestos de Sede: <strong>@Model.desSede</strong></h3>
      

        <div class="list-group">
            @foreach (var item in Model.presupuestos)
            {
                        
            <div href="#" class="list-group-item @item.estadoActualString ">
                <div class="row">
                    <div class="col-sm-6 excesodiv">
                        <a href="#" onclick="verAreasDisponibles(@item.idPresupuesto)"><h4 class="list-group-item-heading">@item.nombrePresupuesto</h4></a>
                    </div>
                    <div class="col-sm-2">
                        <a href="#" data-toggle="modal" data-target="#ModalGeneral" onclick="msgAprobar(@item.idPresupuesto)" ><h5 class="list-group-item-heading">Aprobar</h5></a>
                    </div>
                    <div class="col-sm-4">
                        <a href="#" data-toggle="modal" data-target="#ModalGeneral" onclick="msgVerReportes(@item.idPresupuesto)" ><h5 class="list-group-item-heading">Ver Reportes</h5></a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-3">Registro:</div>
                    <div class="col-sm-3">@item.fechaReg.ToShortDateString()</div>
                    <div class="col-sm-2">Monto:</div>
                    <div class="col-sm-4">S/ @item.monto.ToString("### ### ###.##")</div>
                </div>
                <div class="row">
                    <div class="col-sm-3">Ultima Modif:</div>
                    <div class="col-sm-3">@item.UltModifFec.ToShortDateString()</div>
                    <div class="col-sm-2">Desde:</div>
                    <div class="col-sm-4">@item.fechaValIni.ToShortDateString()</div>
                </div>
                <div class="row">
                    <div class="col-sm-3">Aprobado por:</div>
                    <div class="col-sm-3"><a href="#">Ver</a></div>
                    <div class="col-sm-2">Hasta:</div>
                    <div class="col-sm-4">@item.fechaValFin.ToShortDateString()</div>
                </div>
            </div>
            }
           
                     

            
        </div>

    </div>
    <div class="col-sm-6 panel-secundario" id="PresupPorArea">
        
               
    </div>


</div>

